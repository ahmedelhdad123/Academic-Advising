<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".courses.cpp_Fragment"
    android:background="@color/caffe">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:background="@color/green"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/arrow_back"
            android:layout_width="26dp"
            android:layout_height="30dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="13dp"
            android:src="@drawable/baseline_arrow_back_24" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="11dp"
            android:text="C++ Map"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="62dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/basics"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roadmap_course"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="5dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/green"
                android:text="Basics">
            </androidx.appcompat.widget.AppCompatButton>

            <LinearLayout
                android:id="@+id/level1_cpp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:padding="7dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/mohamed"
                    android:text="@string/mohamed_el_desouki"
                    android:textColor="@color/green"
                    android:layout_weight="1"
                    android:textStyle="italic|bold"
                    android:textSize="20sp"
                    >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="italic|bold"
                    android:textSize="20sp"
                    android:id="@+id/adel"
                    android:text="@string/adel_nasim"
                    android:textColor="@color/green"
                    android:layout_weight="1"
                    >
                </TextView>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/oop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roadmap_course"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/green"
                android:text="oop">
            </androidx.appcompat.widget.AppCompatButton>
            <LinearLayout
                android:id="@+id/level2_cpp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:padding="7dp">

                <TextView
                    android:id="@+id/mohamed_oop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mohamed_el_desouki"
                    android:textColor="@color/green"
                    android:layout_weight="1"
                    android:textStyle="italic|bold"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/adel_oop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/adel_nasim"
                    android:textColor="@color/green"
                    android:layout_weight="1"
                    android:textStyle="italic|bold"
                    android:textSize="20sp" />

            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/data_structure"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roadmap_course"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/green"
                android:text="Data Structure">
            </androidx.appcompat.widget.AppCompatButton>

            <LinearLayout
                android:id="@+id/level3_cpp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:padding="7dp">

                <TextView
                android:id="@+id/mohamed_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mohamed_el_desouki"
                android:textColor="@color/green"
                android:layout_weight="1"
                android:textStyle="italic|bold"
                android:textSize="20sp" />

                <TextView
                    android:id="@+id/adel_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/adel_nasim"
                    android:textColor="@color/green"
                    android:layout_weight="1"
                    android:textStyle="italic|bold"
                    android:textSize="20sp" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/multi_threading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roadmap_course"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/green"
                android:text="Multi-Threading">
            </androidx.appcompat.widget.AppCompatButton>

            <LinearLayout
                android:id="@+id/level4_cpp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:padding="7dp">

                <TextView
                    android:id="@+id/cpp_thread"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- Link One"
                    android:textColor="@color/green"
                    android:layout_weight="1"
                    android:textStyle="italic|bold"
                    android:textSize="20sp"/>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/file_streams"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roadmap_course"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/green"
                android:text="File I/O and Streams"
                >
            </androidx.appcompat.widget.AppCompatButton>

            <LinearLayout
                android:id="@+id/level5_cpp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:padding="7dp">

                <TextView
                    android:id="@+id/file_streams_link1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- Link One"
                    android:textColor="@color/green"
                    android:layout_weight="1"
                    android:textStyle="italic|bold"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/file_streams_link2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- Link Two"
                    android:textColor="@color/green"
                    android:layout_weight="1"
                    android:textStyle="italic|bold"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>