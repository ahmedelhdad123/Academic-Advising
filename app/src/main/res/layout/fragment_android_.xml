<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".courses.Android_Fragment"
    android:background="@color/caffe">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:background="@color/green"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/arrow_back"
            android:layout_width="26dp"
            android:layout_height="30dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="13dp"
            android:src="@drawable/baseline_arrow_back_24" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="11dp"
            android:text="Android Map"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="62dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/basics_java"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roadmap_course"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="5dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@color/green"
                android:text="Learn Java">
            </androidx.appcompat.widget.AppCompatButton>

            <LinearLayout
                android:id="@+id/level1_android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:padding="7dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/mohamed"
                    android:text="@string/mohamed_el_desouki"
                    android:textColor="@color/green"
                    android:layout_weight="1"
                    android:textStyle="italic|bold"
                    android:textSize="20sp"
                    >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="italic|bold"
                    android:textSize="20sp"
                    android:id="@+id/adel"
                    android:text="@string/adel_nasim"
                    android:textColor="@color/green"
                    android:layout_weight="1"
                    >
                </TextView>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/basics_android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roadmap_course"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                android:textSize="25sp"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="@color/green"
                android:text="Basics of Android">
            </androidx.appcompat.widget.AppCompatButton>
            <LinearLayout
                android:id="@+id/level2_android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:padding="7dp">

                <TextView
                    android:id="@+id/mohamed_essa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-Mohammed Essa"
                    android:textColor="@color/green"
                    android:layout_weight="1"
                    android:textStyle="italic|bold"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/jaafar_mohammed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jaafar Mohammed"
                    android:textColor="@color/green"
                    android:layout_weight="1"
                    android:textStyle="italic|bold"
                    android:textSize="20sp" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/kotlin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roadmap_course"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/green"
                android:text="Learn Kotlin"
                android:textAllCaps="false">
            </androidx.appcompat.widget.AppCompatButton>

            <LinearLayout
                android:id="@+id/level3_android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:padding="7dp">

                <TextView
                    android:id="@+id/kotlin_link1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- Link One"
                    android:textColor="@color/green"
                    android:layout_weight="1"
                    android:textStyle="italic|bold"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/kotlin_link2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- Link Two"
                    android:textColor="@color/green"
                    android:layout_weight="1"
                    android:textStyle="italic|bold"
                    android:textSize="20sp" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/other"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roadmap_course"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/green"
                android:textAllCaps="false"
                android:text="Other fundamentals">
            </androidx.appcompat.widget.AppCompatButton>

            <LinearLayout
                android:id="@+id/level4_android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="7dp"
                android:orientation="vertical"
                android:padding="7dp">

                <TextView
                    android:id="@+id/other1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:text="- Link One"
                    android:textColor="@color/green"
                    android:textSize="20sp"
                    android:textStyle="italic|bold" />

                <TextView
                    android:id="@+id/other2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:text="- Link Two"
                    android:textColor="@color/green"
                    android:textSize="20sp"
                    android:textStyle="italic|bold" />

                <TextView
                    android:id="@+id/other3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:text="- Link Three"
                    android:textColor="@color/green"
                    android:textSize="20sp"
                    android:textStyle="italic|bold" />

                <TextView
                    android:id="@+id/other4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:text="- Link Four"
                    android:textColor="@color/green"
                    android:textSize="20sp"
                    android:textStyle="italic|bold" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/jetpack"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roadmap_course"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/green"
                android:text="Android Jetpack"
                android:textAllCaps="false">
            </androidx.appcompat.widget.AppCompatButton>

            <LinearLayout
                android:id="@+id/level5_android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:padding="7dp">

                <TextView
                    android:id="@+id/android_jetpack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Link One "
                    android:textColor="@color/green"
                    android:layout_weight="1"
                    android:textStyle="italic|bold"
                    android:textSize="20sp"/>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/rx_java"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roadmap_course"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/green"
                android:text="RXJava"
                android:textAllCaps="false"
                >
            </androidx.appcompat.widget.AppCompatButton>

            <LinearLayout
                android:id="@+id/level6_android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:padding="7dp">

                <TextView
                    android:id="@+id/rxjava_link1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- Link One"
                    android:textColor="@color/green"
                    android:layout_weight="1"
                    android:textStyle="italic|bold"
                    android:textSize="20sp" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/rest_api"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roadmap_course"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/green"
                android:text="REST API"
                android:textAllCaps="false"
                >
            </androidx.appcompat.widget.AppCompatButton>

            <LinearLayout
                android:id="@+id/level7_android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:padding="7dp">

                <TextView
                    android:id="@+id/rest_api_link1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- Link One"
                    android:textColor="@color/green"
                    android:layout_weight="1"
                    android:textStyle="italic|bold"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/rest_api_link2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- Link Two"
                    android:textColor="@color/green"
                    android:layout_weight="1"
                    android:textStyle="italic|bold"
                    android:textSize="20sp" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/room_database"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roadmap_course"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@color/green"
                android:text="Room Database"
                >
            </androidx.appcompat.widget.AppCompatButton>

            <LinearLayout
                android:id="@+id/level8_android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:padding="7dp">

                <TextView
                    android:id="@+id/room_database_link1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- Link One"
                    android:textColor="@color/green"
                    android:layout_weight="1"
                    android:textStyle="italic|bold"
                    android:textSize="20sp"/>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/design_patterns"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roadmap_course"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@color/green"
                android:text="Design Patterns"
                >
            </androidx.appcompat.widget.AppCompatButton>

            <LinearLayout
                android:id="@+id/level9_android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:padding="7dp">

                <TextView
                    android:id="@+id/design_patterns_link1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- Link One"
                    android:textColor="@color/green"
                    android:layout_weight="1"
                    android:textStyle="italic|bold"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/design_patterns_link2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- Link Two"
                    android:textColor="@color/green"
                    android:layout_weight="1"
                    android:textStyle="italic|bold"
                    android:textSize="20sp"/>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/projects"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roadmap_course"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@color/green"
                android:text="Projects"
                >
            </androidx.appcompat.widget.AppCompatButton>

            <LinearLayout
                android:id="@+id/level10_android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:padding="7dp">

                <TextView
                    android:id="@+id/projects_link1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- Link One"
                    android:textColor="@color/green"
                    android:layout_weight="1"
                    android:textStyle="italic|bold"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/projects_link2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- Link Two"
                    android:textColor="@color/green"
                    android:layout_weight="1"
                    android:textStyle="italic|bold"
                    android:textSize="20sp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>